{
  "name": "wine-stock-mvp",
  "version": "1.0.0",
  "description": "Internal stock & price management system for wine distributor",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "npm run build:css && npx prisma generate",
    "build:css": "npx tailwindcss -i src/styles/input.css -o public/css/output.css --minify",
    "watch:css": "npx tailwindcss -i src/styles/input.css -o public/css/output.css --watch",
    "postinstall": "npx prisma generate",
    "deploy:migrate": "npx prisma migrate deploy",
    "seed:prod": "NODE_ENV=production node prisma/seed.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "node prisma/seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "wine",
    "stock",
    "inventory",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "csv-parse": "^5.5.3",
    "csv-stringify": "^6.4.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prisma": "^5.8.0",
    "tailwindcss": "^3.4.0"
  }
}
