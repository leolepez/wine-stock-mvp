<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title><%= title %> - Wine Stock MVP</title>
  <link href="/css/output.css" rel="stylesheet">
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav', { active: 'stock' }) %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Inventario</h1>
        <p class="mt-1 text-sm text-gray-600">Stock por producto y depósito</p>
      </div>
      <% if (user && (user.role === 'ADMIN' || user.role === 'MANAGER')) { %>
      <div class="mt-4 sm:mt-0 flex space-x-3">
        <a href="/stock/adjust"
           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          Ajustar Stock
        </a>
        <a href="/stock/transfer"
           class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
          Transferir
        </a>
      </div>
      <% } %>
    </div>

    <!-- Filters -->
    <div class="mb-6 flex flex-wrap gap-4">
      <form action="/stock" method="GET" class="flex gap-2 flex-1">
        <input type="text"
               name="search"
               value="<%= search %>"
               placeholder="Buscar producto..."
               class="flex-1 max-w-xs rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2 border">
        <select name="warehouse" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2 border">
          <option value="">Todos los depósitos</option>
          <% warehouses.forEach(wh => { %>
          <option value="<%= wh.id %>" <%= selectedWarehouse == wh.id ? 'selected' : '' %>><%= wh.name %></option>
          <% }) %>
        </select>
        <button type="submit"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          Filtrar
        </button>
      </form>
      <a href="/stock/movements" class="text-sm text-indigo-600 hover:text-indigo-900 self-center">
        Ver movimientos →
      </a>
    </div>

    <!-- Stock Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
            <% warehouses.forEach(wh => { %>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"><%= wh.code %></th>
            <% }) %>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-100">Total</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if (productStock.length === 0) { %>
          <tr>
            <td colspan="<%= warehouses.length + 2 %>" class="px-4 py-8 text-center text-gray-500">
              No hay stock registrado
            </td>
          </tr>
          <% } else { %>
            <% productStock.forEach(ps => { %>
            <tr>
              <td class="px-4 py-3">
                <div class="text-sm font-medium text-gray-900"><%= ps.product.name %></div>
                <div class="text-xs text-gray-500"><%= ps.product.sku %></div>
              </td>
              <% warehouses.forEach(wh => { %>
              <td class="px-4 py-3 text-center">
                <% const qty = ps.warehouses[wh.id] || 0; %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= qty > 20 ? 'bg-green-100 text-green-800' : qty > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-500' %>">
                  <%= qty %>
                </span>
              </td>
              <% }) %>
              <td class="px-4 py-3 text-center bg-gray-50">
                <span class="text-sm font-semibold text-gray-900"><%= ps.total %></span>
              </td>
            </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Low Stock Alert -->
    <%
      const lowStock = productStock.filter(ps => ps.total < 20);
      if (lowStock.length > 0) {
    %>
    <div class="mt-6 rounded-md bg-yellow-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Stock bajo</h3>
          <p class="mt-1 text-sm text-yellow-700">
            <%= lowStock.length %> producto(s) con menos de 20 unidades
          </p>
        </div>
      </div>
    </div>
    <% } %>
  </main>
</body>
</html>
