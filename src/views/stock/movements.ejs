<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title><%= title %> - Wine Stock MVP</title>
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav', { active: 'stock' }) %>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
      <a href="/stock" class="text-indigo-600 hover:text-indigo-900 text-sm">
        &larr; Volver a inventario
      </a>
    </div>

    <div class="sm:flex sm:items-center sm:justify-between mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Movimientos</h1>
        <p class="mt-1 text-sm text-gray-600">Historial de entradas y salidas</p>
      </div>
    </div>

    <!-- Filter -->
    <div class="mb-6">
      <form action="/stock/movements" method="GET" class="flex gap-2">
        <select name="warehouse" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-2 border">
          <option value="">Todos los depósitos</option>
          <% warehouses.forEach(wh => { %>
          <option value="<%= wh.id %>" <%= selectedWarehouse == wh.id ? 'selected' : '' %>><%= wh.name %></option>
          <% }) %>
        </select>
        <button type="submit"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          Filtrar
        </button>
      </form>
    </div>

    <!-- Movements Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Depósito</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Cantidad</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Motivo</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if (movements.length === 0) { %>
          <tr>
            <td colspan="6" class="px-4 py-8 text-center text-gray-500">
              No hay movimientos registrados
            </td>
          </tr>
          <% } else { %>
            <% movements.forEach(m => { %>
            <tr>
              <td class="px-4 py-3 text-sm text-gray-500">
                <%= new Date(m.createdAt).toLocaleDateString('es-AR') %>
                <span class="text-xs text-gray-400 block"><%= new Date(m.createdAt).toLocaleTimeString('es-AR', { hour: '2-digit', minute: '2-digit' }) %></span>
              </td>
              <td class="px-4 py-3">
                <div class="text-sm font-medium text-gray-900"><%= m.product.name %></div>
                <div class="text-xs text-gray-500"><%= m.product.sku %></div>
              </td>
              <td class="px-4 py-3 text-sm text-gray-900">
                <%= m.warehouse.name %>
              </td>
              <td class="px-4 py-3 text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium <%= m.delta > 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= m.delta > 0 ? '+' : '' %><%= m.delta %>
                </span>
              </td>
              <td class="px-4 py-3 text-sm text-gray-600">
                <%= m.reason %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500">
                <%= m.user.email.split('@')[0] %>
              </td>
            </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
